{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"~/api": ["./pages/api"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "ankylos.config.js"],
	"exclude": ["node_modules"]
}
