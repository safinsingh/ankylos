{
	"name": "@ankylos/prettier-config",
	"version": "0.2.0",
	"description": "Configuration for Prettier",
	"keywords": [
		"prettier",
		"formatting",
		"style"
	],
	"main": "dist/index.js",
	"homepage": "https://github.com/safinsingh/ankylos",
	"license": "MPL-2.0",
	"author": {
		"name": "Safin Singh",
		"email": "safinsingh.dev@gmail.com",
		"url": "https://safin.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/safinsingh/ankylos",
		"directory": "packages/prettier-config"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "rm -rf dist/ && tsc",
		"dev": "ts-node src/index.ts",
		"fmt": "prettier --write '*/**/*.{js,ts,tsx,yml,scss,json}'",
		"fmt:ci": "prettier --check '*/**/*.{js,ts,tsx,yml,scss,json}'",
		"lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
		"lint:ci": "eslint '*/**/*.{js,ts,tsx}' --quiet"
	},
	"peerDependencies": {
		"prettier": "2.2.1"
	},
	"devDependencies": {
		"@types/cli-progress": "3.8.0",
		"@types/decompress": "4.2.3",
		"@types/mv": "2.1.0",
		"@types/node": "14.14.22",
		"@types/rmfr": "2.0.0",
		"ts-node": "9.1.1",
		"typescript": "4.1.3",
		"@ankylos/types": "workspace:^0.2.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"chalk": "^4.1.0",
		"cli-progress": "^3.8.2",
		"decompress": "^4.2.1",
		"decompress-targz": "^4.1.1",
		"fast-glob": "^3.2.5",
		"get-npm-tarball-url": "^2.0.2",
		"gluegun": "^4.6.0",
		"got": "^11.8.1",
		"mv": "^2.1.1",
		"rmfr": "^2.0.0",
		"tempy": "^1.0.0"
	}
}
