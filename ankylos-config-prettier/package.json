{
	"name": "@ankylos/prettier-config",
	"version": "0.2.0",
	"description": "Configuration for Prettier",
	"keywords": [
		"prettier",
		"formatting",
		"style"
	],
	"main": "dist/index.js",
	"homepage": "https://github.com/safinsingh/ankylos",
	"license": "MPL-2.0",
	"author": {
		"name": "Safin Singh",
		"email": "safinsingh.dev@gmail.com",
		"url": "https://safin.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/safinsingh/ankylos",
		"directory": "packages/prettier-config"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "rm -rf dist/ && tsc",
		"fmt": "prettier --write '*/**/*.{js,ts,tsx,yml,scss,json}'",
		"fmt:ci": "prettier --check '*/**/*.{js,ts,tsx,yml,scss,json}'",
		"lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
		"lint:ci": "eslint '*/**/*.{js,ts,tsx}' --quiet"
	},
	"peerDependencies": {
		"prettier": "2.2.1"
	},
	"devDependencies": {
		"typescript": "^4.1.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
