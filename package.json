{
	"name": "ankylos",
	"version": "0.2.0",
	"description": "Configuration files & bootstrapping scripts for Node projects",
	"private": true,
	"keywords": [
		"prettier",
		"eslint",
		"formatting",
		"linting"
	],
	"homepage": "https://github.com/safinsingh/ankylos",
	"license": "MPL-2.0",
	"author": {
		"name": "Safin Singh",
		"email": "safinsingh.dev@gmail.com",
		"url": "https://safin.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/safinsingh/ankylos"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"fmt": "prettier --write '*/**/*.{js,ts,tsx,yml,scss,json}'",
		"fmt:ci": "prettier --check '*/**/*.{js,ts,tsx,yml,scss,json}'",
		"lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
		"lint:ci": "eslint '*/**/*.{js,ts,tsx}' --quiet"
	},
	"devDependencies": {
		"@ankylos/prettier-config": "workspace:^0.2.0",
		"@kiwi/eslint-config": "^1.7.0",
		"@types/node": "^14.14.22",
		"eslint": "^7.18.0",
		"husky": "^4.3.8",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	}
}
